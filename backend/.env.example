PORT=3000
NODE_ENV=development

# PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/city_news_db

# Convex
CONVEX_URL=https://your-convex-deployment.convex.cloud
CONVEX_JWT_ISSUER=https://your-convex-deployment.convex.site
# if you need the backend to sign tokens locally instead of calling
# Convex, set a secret here (HS256).  See README for details.
CONVEX_JWT_SECRET=your_very_secret_value
CONVEX_SERVICE_KEY=your_convex_service_key_here

# Google SERP API
SERP_API_KEY=your_serpapi_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
